<div class="modal fade " id="editModalUsers" tabindex="-1">
    <div class="modal-dialog ss_modal_content_edit_users ">
      <div class="modal-content ">
        <div class="modal-header">
          <h5 class="modal-title" id="exampleModalLabel">Edit User</h5>
          <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
        </div>
        <form action="/update_user" method="post" id="form_edit_user" enctype="multipart/form-data">

       
        <div class="modal-body">

            <div class="d-flex ss_main_info_user" id="cont_edit_user">

                <div class="ss_img_modal">

                    <div class="ss_img_holder">
                        <img src="" alt="" id="img_edit_user">
                        <input type="file" id="file_edit_user" name="image" class="ss_input_file" onchange="previewFile2(this)"  accept="image/png, image/gif, image/jpeg">
                    </div>

                </div>

                <div class="ss_inputs_modal ms-2">

                    <input type="text" id="input_user_name" name="name" class="form-control ss_input ss_edit_input">
                    <input type="text" id="input_user_email" name="email" class="form-control ss_input ss_edit_input">
                    <input type="text" id="input_user_num" name="num" class="form-control ss_input ss_edit_input">

                    <div class="ss_role_info">
        
                        <select class="form-select ss_input ss_edit_input" id="input_user_role" name="role">
                            <option class="ss_role_option" value="" disabled selected value></option>
                            <option class="ss_role_option" value="1">Super Admin</option>
                            <option class="ss_role_option" value="2">Admin</option>
                            <option class="ss_role_option" value="3">Editor</option>
                            <option class="ss_role_option" value="4">Author</option>
                            <option class="ss_role_option" value="5">Contributor</option>
                            <option class="ss_role_option" value="6">Supporter</option>
                        </select>
    
                    </div>
        
                </div>

            </div>

                
        </div>


        <div class="modal-footer justify-content-start ss_modal_footer">

          <button type="button" class="btn btn-primary ss_button" id="user_update_btn">Update</button>

          <button type="button" class="btn btn-primary ss_button" id="user_trash_btn">Trashe</button>

        </div>

    </form>
      </div>
    </div>
  </div>