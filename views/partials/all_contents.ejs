
 <% for(let i = 0; i < data.length; i++) { %>

    <div class="row" data-id="<%= data[i].id_content %>">

        <div class="col-lg-5 order-2 order-lg-1 mb-sm-3" id="content_img_holder">
    
            <div class="ss_img_content_holder ">
                <img src="<%= data[i].content_image %>" alt="">
            </div>
    
        </div>
    
        <div class="col-lg-7  order-lg-2 mb-sm-4" id="content_info_holder">
    
            <h3 class="fs-4 ss_content_header" ><%= data[i].title %></h3>
    
            <div class="d-flex align-items-center">
                <div class="ss_img_author_holder">
                    <img src="<%= data[i].user_image %>" alt="">
                </div>
                <p class="mb-0 ms-2"><%= data[i].full_name %></p>
                <p><%= data[i].date.toUTCString().slice(0, -13) %></p>
                <p class="ms-5"> <%= data[i].time %></p>
            </div>
    
        </div>
    
    </div>

    

<% } %>