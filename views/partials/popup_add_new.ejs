

<% if(typeof data != 'undefined') { %>

    <div class="modal fade " id="addNewModal" tabindex="-1">
        <div class="modal-dialog ">
          <div class="modal-content ">
            <div class="modal-header">
              <h5 class="modal-title" id="exampleModalLabel">Publish user</h5>
              <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <!-- <form action="/admin/add_new/post"  method="post" id="form_data">  -->
    
           
            <div class="modal-body ss_full_holder_phone">
                
                <div class="ss_inputs_block_popup ">
        
                    <p>Publish</p>
                    <div class="ss_line"></div>
        
                    <div class="mb-3 mt-2">
                        <select class="form-select" id="inputGroup_publish_popup" >
                            <% let options_id = ['1','2','3','4']; %>
                            <% let options = ['', 'Publish','Draft','Schedule','Trashe']; %>

                            <% for(let i = 0; i < options_id.length; i++) { %>
                                <% let selected = (data[0].publish == options_id[i]) ? 'selected' : ''; %>

                                <option value="<%= options_id[i]%>" <%= selected %> > <%= options[options_id[i]] %> </option>
                            <% } %>
                        </select>
                    </div>
        
                </div>
        
                <div class="ss_inputs_block">
        
                    <p>Post</p>
                    <div class="ss_line"></div>
        
                    <div class="mb-3">
                        <select class="form-select" id="inputGroup_post_popup">

                            <% let post_place_id = ['1','2','3']; %>
                            <% let post_place_options = ['', 'Main article','Article','Author choise']; %>

                            <% for(let i = 0; i < post_place_id.length; i++) { %>
                                <% let selected = (data[0].post_place == post_place_id[i]) ? 'selected' : ''; %>

                                <option value="<%= post_place_id[i]%>" <%= selected %> > <%= post_place_options[post_place_id[i]] %> </option>
                            <% } %>

                        </select>
                    </div>
        
                </div>
        
        
                <div class="ss_inputs_block mb-3">
        
                    <p>Category</p>
                    <div class="ss_line"></div>
    
                    <div class="input-group mb-3" >
                        <input type="text" class="ss_input_tag_popup">
                        <button class="btn" id="btn_tag_popup" type="button">Click</button>
                    </div>
    
                    <div class="ss_tags_container_popup" id="inputGroup_category_popup">
                        
                        <% data.forEach( e => { %>

                            <div class="tag_category">
                                <span><%= e.category_name %></span>
                            </div> 

                        <% }); %>
            
                    </div>
        
                </div>
    
                <div class="row">
    
                    <div class="col-lg-6 d-flex align-items-center">
    
                        <div class="ss_img_holder ss_img_popup_holder  d-flex ss_add_image_holder">
                            <img id="img_content_popup" src="<%= data[0].image %>" data-old="<%= data[0].image%>" alt="">
                        </div>

                        <label for="upload_popup" class="ss_input_label align-items-center d-flex">
                            <div>Get image</div>
                            <input type="file" id="upload_popup" class="ss_input_singin_img ss_add_input" accept="image/png, image/gif, image/jpeg" onchange="previewFile2(this, '#img_content_popup')">
                        </label>
    
                    </div>
                    

                </div>
                     
                    
            </div>
    
    
            <div class="modal-footer justify-content-start ss_modal_footer" data-check="phone">
    
              <button type="submit" class="btn btn-primary ss_button " id="post_content_btn_modul" >Update</button>
              <button type="button" class="btn btn-primary ss_button" id="cancle_content">Cancle</button>
    
            </div>
    
        <!-- </form> -->
          </div>
        </div>
      </div>




