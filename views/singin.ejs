<!doctype html>
<html>
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.15.4/css/all.css" integrity="sha384-DyZ88mC6Up2uqS4h/KRgHuoeGwBcD4Ng9SiP4dIRy0EXTlnuz47vAwmeGwVChigm" crossorigin="anonymous">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@300;400&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="/css/singin.css">
    <link rel="stylesheet" href="/trumbowyg/dist/ui/trumbowyg.min.css">
    <title>Tech singin</title>
  </head>
  <body>

    <div class="container">

        <div>
            <div class="d-flex justify-content-between">

                <!-- <h2 id="singin_name"><%= name %></h2> -->
                <input type="text" value="<%= name %>" id="singin_name" >
                <p class="m-0" id="role" data-index="<%= role %>"><%= role %></p>

            </div>
            <div class="line"></div>
        </div> 

        <div class="row">

            <div class="col-xl-3 col-lg-4 col-md-5 col-sm-6">

                <div class="ss_img_holder">
                    <img src="" alt="" id="img_singin" name="image_user">
                    <input type="file" id="upload" class="ss_input_singin_img" accept="image/png, image/gif, image/jpeg" onchange="previewFile2(this)">
                </div>

                <div class="ss_user_main_info">

                    <input type="email" value="<%= e_mail %>" placeholder="E-mail" id="email_singin">
                    <input type="text" placeholder="Number" id="num_singin">

                </div>

            </div>

            <div class="col-xl-9  col-lg-8 col-md-7 col-sm-6">

                <div class="ss_social_user">

                    <label for=""><i class="fab fa-facebook-square"></i></label>
                    <input type="text" id="facebook_singin">

                </div>

                <div class="ss_social_user">

                    <label for=""><i class="fab fa-instagram-square"></i></label>
                    <input type="text" id="instagram_singin">

                </div>

                <div class="ss_social_user">

                    <label for=""><i class="fab fa-twitter-square"></i></label>
                    <input type="text" id="twitter_singin">

                </div>

                <div class="ss_password d-flex">


                    <div>

                        <label for="custom_password_singin ">Password</label>
                        <input type="text" class="ss_input_password d-block" id="custom_password_singin">

                    </div>

                    <div>

                        <label for="custom_password_singin ">Confirme password</label>
                        <input type="text" class="ss_input_password d-block" id="custom_password_confirme_singin">

                    </div>

                </div>

            </div>
        </div>

        <div class="row mt-4">

            <div class="col-lg-12">

                <textarea class="ss_text_area" id="main_text_area_singin"></textarea>

            </div>

        </div>

        <button class=" mt-4" id="btn_send">Send</button>

    </div>



    <script src="/js/jq/jquery.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>
    <script src="/trumbowyg/dist/trumbowyg.min.js"></script>       
    <script src="trumbowyg/dist/plugins/upload/trumbowyg.upload.min.js"></script>
    <script src="/js/admin.js"></script>

</body>
</html>