    <title>Tech singin</title>
  </head>
  <body>

    <section class="vh-100" style="background-color: #eee;">
        <div class="container h-100">
          <div class="row d-flex justify-content-center align-items-center h-100">
            <div class="col-lg-12 col-xl-11">
              <div class="card text-black" style="border-radius: 25px;">
                <div class="card-body p-md-5">
                  <div class="row justify-content-center">
                    <div class="col-md-10 col-lg-6 col-xl-5 order-2 order-lg-1">
      
                      <p class="text-center h1 fw-bold mb-5 mx-1 mx-md-4 mt-4">Sign up</p>
      
                      <form class="mx-1 mx-md-4 ss_form_singup">

                        <div class="d-flex flex-row align-items-center mb-4 ss_role_holder_singup">
                            <i class="fas fa-user fa-lg me-3 fa-fw"></i>
                            <div class="form-outline flex-fill mb-0">
                              <label class="form-label" for="sing_up_role">Role: <strong id="sing_up_role"><%= role %></strong></label>
                            </div>
                        </div>
      
                        <div class="d-flex flex-row align-items-center mb-4">
                          <i class="fas fa-user fa-lg me-3 fa-fw"></i>
                          <div class="form-outline flex-fill mb-0">
                            <input type="text" value="<%= name %>" id="singin_name" class="form-control ss_singup_input" />
                            <label class="form-label" for="singin_name">Your Name</label>
                          </div>
                        </div>
      
                        <div class="d-flex flex-row align-items-center mb-4">
                          <i class="fas fa-envelope fa-lg me-3 fa-fw"></i>
                          <div class="form-outline flex-fill mb-0">
                            <input type="email" value="<%= e_mail %>" id="email_singin" class="form-control ss_singup_input" />
                            <label class="form-label" for="email_singin">Your Email</label>
                          </div>
                        </div>

                        <div class="d-flex flex-row align-items-center mb-4">
                            <i class="fas fa-user fa-lg me-3 fa-fw"></i>
                            <div class="form-outline flex-fill mb-0">
                              <input type="text" id="num_singin" class="form-control ss_singup_input" />
                              <label class="form-label" for="num_singin">Your Number</label>
                            </div>
                        </div>

                        <div class="d-flex flex-row align-items-center mb-4">
                            <i class="fas fa-lock fa-lg me-3 fa-fw"></i>
                            <div class="form-outline flex-fill mb-0">
                                <div class="ss_img_holder d-flex align-items-center">
                                    <img src="" alt="" id="img_singin" name="image_user ss_singup_input">
                                    <label for="upload" class="ss_input_label ms-3 px-2 py-1">
                                        <div class="ss_input_div">Choose file</div>
                                        <input type="file" id="upload" class="ss_input_singin_img ms-3" accept="image/png, image/gif, image/jpeg" onchange="previewFile2(this,'#img_singin')">
                                    </label>
                                </div>
                            </div>
                        </div>
      
                        <div class="d-flex flex-row align-items-center mb-4">
                          <i class="fas fa-lock fa-lg me-3 fa-fw"></i>
                          <div class="form-outline flex-fill mb-0">
                            <input type="password" id="custom_password_singin" class="form-control ss_input_password ss_singup_input" />
                            <label class="form-label" for="custom_password_singin">Password</label>
                          </div>
                        </div>
      
                        <div class="d-flex flex-row align-items-center mb-4">
                          <i class="fas fa-key fa-lg me-3 fa-fw"></i>
                          <div class="form-outline flex-fill mb-0">
                            <input type="password" id="custom_password_confirme_singin" class="form-control ss_input_password ss_singup_input" />
                            <label class="form-label" for="custom_password_confirme_singin">Repeat your password</label>
                          </div>
                        </div>
      
                        <div class="d-flex justify-content-center mx-4 mb-3 mb-lg-4">
                          <button type="button" id="btn_send" class="btn btn-primary btn-lg">Register</button>
                        </div>
      
                      </form>
      
                    </div>
                    <div class="col-md-10 col-lg-6 col-xl-7 d-flex align-items-center order-1 order-lg-2">
      
                      <img src="/svg/singUp.svg"
                        class="img-fluid" alt="Sample image">
      
                    </div>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </section>

