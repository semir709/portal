                        <div class="ss_header_holder d-flex align-items-end">
                            <h2 class="fs-4">Best CPU right now</h2>
                        </div>

                        <div class="d-flex align-items-center">

                            <div class="ss_img_author_holder">

                                <img src="/img/niko.jpg" alt="">
                                <div class="ss_dark_filter rounded-circle"></div>

                            </div>

                            <p class="ss_paragraphs">Semir Selman, 01/08/2022</p>

                        </div>
                    </div>
                </div>    
                      
               
            </div>
        </div>

        <%- include('partials/content.ejs')%>

        <div class="row">

            <div class="col-1"></div>

            <div class="col-10 p-0">
                <div class="line mb-5"></div>
            </div>

            <div class="col-1"></div>

