<!doctype html>
<html>
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.15.4/css/all.css" integrity="sha384-DyZ88mC6Up2uqS4h/KRgHuoeGwBcD4Ng9SiP4dIRy0EXTlnuz47vAwmeGwVChigm" crossorigin="anonymous">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@300;400&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="/css/nav.css">
    <link rel="stylesheet" href="/css/home.css">
    <link rel="stylesheet" href="/css/footer.css">
    <title>Tech portal</title>
  </head>
  <body>
    <%- include('partials/home_nav.ejs')%>

    <!--  -->

    <div class="container ss_container">

        <% if(main_content.length > 0) { %> 

            <div class="row ss_main_content_size mt-5 mx-0">

                <div class="col-6 ss_main_content">
                    
                    <div class="ss_img_holder">
                        <img src="/img/niko.jpg" alt="">
                        <div class="ss_dark_filter"></div>
                    </div>

                    <div class="ss_article_info_main">

                        <div class="ss_header_holder d-flex align-items-end">
                            <h1 class="ss_main_header"><%= main_content[0].title %></h1>
                        </div>

                        <div class="d-flex align-items-center">

                            <div class="ss_img_author_holder">

                                <img src="<%= main_content[0].user_image %>" alt="">
                                <div class="ss_dark_filter rounded-circle"></div>

                            </div>

                            <p class="ss_paragraphs"><%= main_content[0].full_name %></p>
                            <p class="ss_paragraphs"><%= main_content[0].date.toUTCString().slice(0, -13) %></p>
                            <p class="ss_paragraphs"><%= main_content[0].time %></p>

                        </div>
                    </div>
                    
                </div>
    
                <div class="col-6 p-0">
    
                    <div class="row ss_main_content_size mx-0">
    
                        <div class="col-12 ss_main_content_side ">
                            
                            <div class="ss_img_holder">
                                <img src="/img/niko.jpg" alt="">
                                <div class="ss_dark_filter"></div>
                            </div>

                            <div class="ss_article_info_main_side">

                                <div class="ss_header_holder d-flex align-items-end">
                                    <h1 class="ss_main_header"><%= main_content[0].title %></h1>
                                </div>
        
                                <div class="d-flex align-items-center">
        
                                    <div class="ss_img_author_holder">
        
                                        <img src="<%= main_content[0].user_image %>" alt="">
                                        <div class="ss_dark_filter rounded-circle"></div>
        
                                    </div>
        
                                    <p class="ss_paragraphs"><%= main_content[0].full_name %></p>
                                    <p class="ss_paragraphs"><%= main_content[0].date.toUTCString().slice(0, -13) %></p>
                                    <p class="ss_paragraphs"><%= main_content[0].time %></p>
        
                                </div>
                            </div>
    
                        </div>
    
                        <div class="col-12 ss_main_content_side">
                            
                            <div class="ss_img_holder">
                                <img src="/img/niko.jpg" alt="">
                                <div class="ss_dark_filter"></div>
                            </div>

                            <div class="ss_article_info_main_side">

                                <div class="ss_header_holder d-flex align-items-end">
                                    <h1 class="ss_main_header"><%= main_content[0].title %></h1>
                                </div>
        
                                <div class="d-flex align-items-center">
        
                                    <div class="ss_img_author_holder">
        
                                        <img src="<%= main_content[0].user_image %>" alt="">
                                        <div class="ss_dark_filter rounded-circle"></div>
        
                                    </div>
        
                                    <p class="ss_paragraphs"><%= main_content[0].full_name %></p>
                                    <p class="ss_paragraphs"><%= main_content[0].date.toUTCString().slice(0, -13) %></p>
                                    <p class="ss_paragraphs"><%= main_content[0].time %></p>
        
                                </div>
                            </div>
    
                        </div>
    
                    </div>
    
                </div>
    
            </div>

        <%}%> 


        <div class="row mt-5 mb-5 ss_content_size content_holder" id="content_holder">

    
            <div class="col-xl-9 ps-0 mb-md-5" >
                <%- include('partials/all_contents.ejs')%>
            </div>

            <div class="col-xl-3 order-lg-3 p-md-0 p-0">

                <%- include('partials/side_content.ejs')%>

            </div>


        </div>

        <div class="row">

            <div class="col-12 p-0">
                <div class="line mb-5"></div>
            </div>

        </div>

        <%-include('partials/pagination.ejs')%>
    </div>

    <%-include('partials/footer.ejs')%>

    <script src="/js/jq/jquery.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>
    <script src="/js/home.js"></script>
</body>
</html>