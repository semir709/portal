<!doctype html>
<html>
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.15.4/css/all.css" integrity="sha384-DyZ88mC6Up2uqS4h/KRgHuoeGwBcD4Ng9SiP4dIRy0EXTlnuz47vAwmeGwVChigm" crossorigin="anonymous">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@300;400&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="/css/nav.css">
    <link rel="stylesheet" href="/css/home.css">
    <link rel="stylesheet" href="/css/all_contents.css">
    <link rel="stylesheet" href="/css/footer.css">
    <link rel="stylesheet" href="/css/content.css">
    <title>Tech portal</title>
  </head>
  <body>
    <%- include('partials/home_nav.ejs')%>

    <div class="container ss_container mt-4">

        <div class="row">


            <div class="col-12">

                <div class="ss_top_info ">

                    <h1 class="fs-2 ss_header_content"><%= data.title %></h1>

                    <div class="d-flex mb-3 align-items-center">

                        <div class="ss_img_author_holder me-3">
                            <img src="<%=data.author_image%>" alt="">
                        </div>
                        <p class="mb-0 ms-2 ss_author_info_all_content"><%= data.name %></p>
                        <p class="mb-0 ms-2 ss_author_info_all_content"><%= data.date.toUTCString().slice(5, -13) %></p>
                        <p class="ms-2 mb-0 ss_author_info_all_content"> <%= data.time.slice(0,5) %>h</p>

                    </div>

                    <div class="ss_img_main_holder">
                        <img src="<%= data.content_image %>" alt="">
                    </div>

                </div>

            </div>


        </div>


        <div class="row mt-5 mb-5 mx-0" >

            <div class="col-xl-9 ps-0 ss_content_text">

                <%- data.article %>


            </div>


            <div class="col-xl-3 order-lg-3 p-md-0 p-0 content_holder">

                <%- include('partials/side_content.ejs')%>

            </div>

        </div>

        <div class="row">

        

            <div class="col-12 p-0">
                <div class="line mb-5"></div>
            </div>

           

        </div>

    </div>

    <%-include('partials/footer.ejs')%>

    <script src="/js/jq/jquery.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>
    <script src="/js/home.js"></script>
</body>
</html>